<Window x:Class="GasStationTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:GasStationTracker"
        mc:Ignorable="d"
        Title="Gas Station Simulator Tracker" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/Assets/GasStationLogo.png" Name="Logo" Grid.Row="1"/>
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <DataGrid x:Name="DataTable" AutoGenerateColumns="False" ItemsSource="{Binding Records}">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}"/>
                    <DataGridTextColumn Header="IGT" Binding="{Binding Path=IGT}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid x:Name="LiveGraphs" Visibility="Collapsed">
                <Grid.DataContext>
                    <local:GraphViewModel/>
                </Grid.DataContext>
                <oxy:Plot x:Name="FirstPlot" Title="{Binding Title}">
                    <oxy:Plot.Axes>
                        <oxy:DateTimeAxis Position="Bottom"/>
                        <oxy:LinearAxis Position="Left"/>
                    </oxy:Plot.Axes>
                    <oxy:Plot.Series>
                        <oxy:LineSeries ItemsSource="{Binding Points}"/>
                        <oxy:LineSeries ItemsSource="{Binding Points2}"/>
                    </oxy:Plot.Series>
                </oxy:Plot>
            </Grid>
            <Grid x:Name="Settings" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.Background>
                    <SolidColorBrush Color="LightGray" Opacity="0.4"/>
                </Grid.Background>
                <Label Grid.Row="0">Settings</Label>
                <Image Opacity="0.15" Grid.Row="1" Source="/Assets/GasStationLogo.png"/>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" IsEnabled="False" IsChecked="False">Backup save files on quit</CheckBox>
                    <CheckBox Grid.Row="1" IsEnabled="False" IsChecked="True">Add Herobrine</CheckBox>
                </Grid>
            </Grid>
        </Grid>
        <DockPanel Grid.Row="2" LastChildFill="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button x:Name="StartStop" Content="Start tracking" Grid.Row="0" Click="StartStopTracking"></Button>
                <Button Click="RawDataClick" Content="Raw data" Grid.Row="1"></Button>
                <Button Click="LiveGraphsClick" Content="Live Graphs" Grid.Row="2"></Button>
                <Button Click="SettingsClick" Content="Settings" Grid.Row="3"></Button>
            </Grid>
        </DockPanel>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="Made by GramBezEndu" Grid.Row="0"></TextBlock>
            <TextBlock Text="Tested on game version: 1.0.1.37938"  Grid.Row="1"></TextBlock>
        </Grid>
        <TextBox x:Name="Logs" Text="LOGS:&#x0a;" Grid.Row="3" Grid.Column="1" Background="LightGray" IsReadOnly="True"></TextBox>
    </Grid>
</Window>
