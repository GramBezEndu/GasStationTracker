<UserControl x:Class="GasStationTracker.Controls.RawData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GasStationTracker.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid x:Name="DataTable" AutoGenerateColumns="False" ItemsSource="{Binding Records}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}"/>
            <DataGridTextColumn Header="IGT" Binding="{Binding Path=IGT}"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
